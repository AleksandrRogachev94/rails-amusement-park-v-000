<% if attraction.errors.any? %>
  <p>The following errors prohibited to sign up:</p>
  <div class="errors_explanation">
    <ul class="list-group">
      <% attraction.errors.full_messages.each do |msg| %>
        <li class="list-group-item"><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for attraction do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :tickets %>
    <%= f.text_field :tickets %>
  </div>

  <div class="form-group">
    <%= f.label :nausea_rating %>
    <%= f.text_field :nausea_rating %>
  </div>

  <div class="form-group">
    <%= f.label :happiness_rating %>
    <%= f.text_field :happiness_rating %>
  </div>

  <div class="form-group">
    <%= f.label :min_height %>
    <%= f.text_field :min_height %>
  </div>

  <div class="form-group">
    <%= f.submit %>
  </div>
<% end %>
