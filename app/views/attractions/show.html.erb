<h1><%= @attraction.name %></h1>
<p>Tickets: <%= @attraction.tickets %></p>
<p>Happiness: <%= @attraction.happiness_rating %></p>
<p>Nausea: <%= @attraction.nausea_rating %></p>
<p>Main Height: <%= @attraction.min_height %></p>

<% if current_user.admin? %>
  <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% else %>
  <%= form_tag new_ride_path do %>
    <%= hidden_field_tag :attraction_id, @attraction.id %>
    <%= submit_tag "Go on this ride" %>
  <% end %>
<% end %>
