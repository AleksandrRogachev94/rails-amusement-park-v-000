<% if user.errors.any? %>
  <p>The following errors prohibited to sign up:</p>
  <div class="errors_explanation">
    <ul class="list-group">
      <% user.errors.full_messages.each do |msg| %>
        <li class="list-group-item"><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for user do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :tickets %>
    <%= f.text_field :tickets %>
  </div>

  <div class="form-group">
    <%= f.label :nausea %>
    <%= f.text_field :nausea %>
  </div>

  <div class="form-group">
    <%= f.label :happiness %>
    <%= f.text_field :happiness %>
  </div>

  <div class="form-group">
    <%= f.label :height %>
    <%= f.text_field :height %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="form-group">
    <div class="checkbox">
      <%= f.label :admin %>
      <%= f.check_box :admin %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit %>
  </div>
<% end %>
