<!DOCTYPE html>
<html>
  <head>
    <title>Amusement Park</title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= analytics_init if Rails.env.production? %>
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet"></link>
  </head>
  <body>
    <!--  navbar -->
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        <%= link_to "Home", root_path, class: "navbar-brand" %>
        <% if !logged_in? %>
          <%= link_to "Sign up", new_user_path, class: "navbar-brand" %>
          <%= link_to "Sign in", signin_path, class: "navbar-brand" %>
        <% else %>
          <%= link_to "Your profile", user_path(current_user), class: "navbar-brand" %>
          <%= link_to "Attractions", attractions_path, class: "navbar-brand" %>
          <%= link_to "Log Out", logout_path, method: 'delete', class: "navbar-brand" %>
        <% end %>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
           <!--  nav here -->
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <!-- content -->
    <div class="container"  role="main">

      <%= content_tag :div, flash[:notice], class: "alert-success" %>
      <%= content_tag :div, flash[:alert], class: "alert-warning" %>
      <%= content_tag :div, flash[:error], class: "alert-danger" %>

      <%= yield %>
    </div>

  </body>
</html>
